{
	// See https://go.microsoft.com/fwlink/?LinkId=733558 
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"type": "dreammaker",
			"dme": "tgmc.dme",
			"problemMatcher": [
				"$dreammaker"
			],
			"group": "build"
		},
		{
			"label": "dreamchecker",
			"type": "shell",
			"command": "./dreamchecker.exe",
			"problemMatcher": {
				"owner": "cpp",
				"fileLocation": ["relative", "${workspaceFolder}"],
				"pattern": {
					"regexp": "^(.*), line (\\d+), column (\\d+):$",
					"file": 1,
					"line": 2,
					"column": 3
				}
			},
			"group": "build"
		}
	]
}
